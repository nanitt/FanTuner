<UserControl x:Class="FanTuner.UI.Views.ProfilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Profiles & Curves List -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,16,0">
                <!-- Profiles Section -->
                <TextBlock Text="Profiles" Style="{StaticResource HeaderText}" Margin="0,0,0,16"/>

                <!-- Create Profile -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="New Profile" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewProfileName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>
                        <Button Content="Create Profile"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding CreateProfileCommand}"
                                IsEnabled="{Binding NewProfileName.Length}"/>
                    </StackPanel>
                </Border>

                <!-- Profile List -->
                <ItemsControl ItemsSource="{Binding Profiles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                                <Border.Style>
                                    <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Id}" Value="{Binding DataContext.ActiveProfileId, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock Text="(Default)" Margin="8,0,0,0"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                                        <Button Content="Activate"
                                                Style="{StaticResource SecondaryButton}"
                                                Command="{Binding DataContext.ActivateProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Padding="8,4"/>
                                        <Button Content="Delete"
                                                Style="{StaticResource SecondaryButton}"
                                                Command="{Binding DataContext.DeleteProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Margin="8,0,0,0"
                                                Padding="8,4"
                                                IsEnabled="{Binding IsDefault, Converter={StaticResource InverseBoolConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Curves Section -->
                <TextBlock Text="Fan Curves" Style="{StaticResource SubheaderText}" Margin="0,24,0,16"/>

                <!-- Create Curve -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="New Curve" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewCurveName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,8"/>
                        <Button Content="Create Curve"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding CreateCurveCommand}"
                                IsEnabled="{Binding NewCurveName.Length}"/>
                    </StackPanel>
                </Border>

                <!-- Curve List -->
                <ItemsControl ItemsSource="{Binding Curves}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8" Padding="12" CornerRadius="4"
                                    Background="{StaticResource SurfaceBrush}"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="OnCurveSelected">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}">
                                            <Run Text="{Binding Points.Count, Mode=OneWay}"/>
                                            <Run Text="points"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <Button Content="X"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource SecondaryButton}"
                                            Command="{Binding DataContext.DeleteCurveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="4,2"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Curve Editor -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Curve Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="Curve Editor" Style="{StaticResource SubheaderText}"/>
                    <TextBlock Text="{Binding SelectedCurve.Name, FallbackValue='Select a curve'}"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Curve Points -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="No curve selected"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   Visibility="{Binding SelectedCurve, Converter={StaticResource NullToVisibilityConverter}}"/>

                        <ItemsControl ItemsSource="{Binding SelectedCurve.Points}"
                                      Visibility="{Binding SelectedCurve, Converter={StaticResource NotNullToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Temperature" FontSize="11"
                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="60"/>
                                                <TextBlock Text="°C" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="→" FontSize="20"
                                                   VerticalAlignment="Center" Margin="16,0"
                                                   Foreground="{StaticResource TextMutedBrush}"/>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Fan Speed" FontSize="11"
                                                       Foreground="{StaticResource TextMutedBrush}"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox Text="{Binding FanPercent, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="60"/>
                                                <TextBlock Text="%" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Curve Settings -->
                        <StackPanel Visibility="{Binding SelectedCurve, Converter={StaticResource NotNullToVisibilityConverter}}"
                                    Margin="0,16,0,0">
                            <TextBlock Text="Curve Settings" FontWeight="SemiBold" Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,8">
                                    <TextBlock Text="Min Fan %" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBox Text="{Binding SelectedCurve.MinPercent, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,0,8">
                                    <TextBlock Text="Max Fan %" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBox Text="{Binding SelectedCurve.MaxPercent, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,8,0">
                                    <TextBlock Text="Hysteresis (°C)" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBox Text="{Binding SelectedCurve.Hysteresis, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Save Button -->
                <Button Grid.Row="2"
                        Content="Save Curve"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding SaveCurveCommand}"
                        Margin="0,16,0,0"
                        IsEnabled="{Binding SelectedCurve, Converter={StaticResource NotNullToBoolConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

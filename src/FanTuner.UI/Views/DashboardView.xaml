<UserControl x:Class="FanTuner.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,0,24">
            <!-- Header -->
            <TextBlock Text="Dashboard" Style="{StaticResource HeaderText}" Margin="0,0,0,24"/>

            <!-- Warnings -->
            <ItemsControl ItemsSource="{Binding Warnings}" Margin="0,0,0,16">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource WarningBanner}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets"
                                           Foreground="{StaticResource WarningBrush}" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding}" Foreground="{StaticResource WarningBrush}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Quick Stats -->
            <TextBlock Text="Quick Stats" Style="{StaticResource SubheaderText}" Margin="0,0,0,12"/>
            <UniformGrid Columns="4" Margin="0,0,0,24">
                <!-- CPU Temp -->
                <Border Style="{StaticResource GaugeCard}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="CPU Temperature" Style="{StaticResource BodyText}"/>
                        <TextBlock Style="{StaticResource ValueText}">
                            <TextBlock.Text>
                                <Binding Path="CpuTemp" StringFormat="{}{0:F1}°C"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <ProgressBar Value="{Binding CpuTemp}" Maximum="100" Height="4"
                                     Background="{StaticResource SurfaceBrush}" Margin="0,8,0,0">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CpuTemp, Converter={StaticResource TemperatureToLevelConverter}}" Value="High">
                                            <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CpuTemp, Converter={StaticResource TemperatureToLevelConverter}}" Value="Critical">
                                            <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                    </StackPanel>
                </Border>

                <!-- GPU Temp -->
                <Border Style="{StaticResource GaugeCard}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="GPU Temperature" Style="{StaticResource BodyText}"/>
                        <TextBlock Style="{StaticResource ValueText}">
                            <TextBlock.Text>
                                <Binding Path="GpuTemp" StringFormat="{}{0:F1}°C"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <ProgressBar Value="{Binding GpuTemp}" Maximum="100" Height="4"
                                     Background="{StaticResource SurfaceBrush}" Margin="0,8,0,0">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding GpuTemp, Converter={StaticResource TemperatureToLevelConverter}}" Value="High">
                                            <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding GpuTemp, Converter={StaticResource TemperatureToLevelConverter}}" Value="Critical">
                                            <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                    </StackPanel>
                </Border>

                <!-- Max Fan -->
                <Border Style="{StaticResource GaugeCard}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Highest Fan" Style="{StaticResource BodyText}"/>
                        <TextBlock Style="{StaticResource ValueText}">
                            <TextBlock.Text>
                                <Binding Path="MaxFanRpm" StringFormat="{}{0:F0}"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Text="RPM" Style="{StaticResource BodyText}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Active Profile -->
                <Border Style="{StaticResource GaugeCard}">
                    <StackPanel>
                        <TextBlock Text="Active Profile" Style="{StaticResource BodyText}"/>
                        <TextBlock Text="{Binding ActiveProfileName}"
                                   FontSize="20" FontWeight="Bold"
                                   TextTrimming="CharacterEllipsis"/>
                        <Ellipse Width="10" Height="10" Margin="0,8,0,0" HorizontalAlignment="Left">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEmergencyMode}" Value="True">
                                            <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Temperature Sensors -->
            <TextBlock Text="Temperature Sensors" Style="{StaticResource SubheaderText}" Margin="0,0,0,12"/>
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <ItemsControl ItemsSource="{Binding TemperatureSensors}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding HardwareName}"
                                               Style="{StaticResource BodyText}" FontSize="11"/>
                                </StackPanel>

                                <ProgressBar Grid.Column="1" Value="{Binding Value}" Maximum="100"
                                             Height="8" Margin="16,0"
                                             Background="{StaticResource SurfaceBrush}">
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Value, Converter={StaticResource TemperatureToLevelConverter}}" Value="High">
                                                    <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Value, Converter={StaticResource TemperatureToLevelConverter}}" Value="Critical">
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>

                                <TextBlock Grid.Column="2" Text="{Binding FormattedValue}"
                                           HorizontalAlignment="Right" FontWeight="SemiBold"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Fans -->
            <TextBlock Text="Fans" Style="{StaticResource SubheaderText}" Margin="0,0,0,12"/>
            <Border Style="{StaticResource CardStyle}">
                <ItemsControl ItemsSource="{Binding Fans}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding HardwareName}"
                                               Style="{StaticResource BodyText}" FontSize="11"/>
                                </StackPanel>

                                <ProgressBar Grid.Column="1" Value="{Binding CurrentPercent, TargetNullValue=0}"
                                             Maximum="100" Height="8" Margin="16,0"
                                             Background="{StaticResource SurfaceBrush}"
                                             Foreground="{StaticResource PrimaryBrush}"/>

                                <TextBlock Grid.Column="2" HorizontalAlignment="Right" FontWeight="SemiBold">
                                    <TextBlock.Text>
                                        <Binding Path="CurrentRpm" StringFormat="{}{0:F0} RPM"/>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Grid.Column="3" HorizontalAlignment="Right">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CanControl}" Value="False">
                                                    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <TextBlock.Text>
                                        <Binding Path="StatusText"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
